<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity"
    android:background="@color/colorThemeBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10"
        android:gravity="center_vertical">
        
        <ImageView
            android:layout_width="@dimen/size_55"
            android:layout_height="@dimen/size_55"
            android:src="@drawable/profile_new"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marwin Simms"
                android:textColor="@color/text_color"
                android:textSize="@dimen/size_18"
                android:gravity="center"
                android:drawablePadding="@dimen/size_7"
               android:drawableRight="@drawable/ic_down_arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:45:12"
                android:textColor="@color/text_color"
                android:textSize="@dimen/size_16"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/size_10">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/activity_main_spinner_all_cat"
                android:padding="@dimen/size_10"
                android:text="All Category"
                android:textSize="@dimen/size_17"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_down_arrow_small"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/activity_main_spinner_all_order"
                android:padding="@dimen/size_10"
                android:text="All Orders"
                android:textSize="@dimen/size_17"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_down_arrow_small"
                android:drawablePadding="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_menu"
                android:onClick="top_icons"
                android:src="@drawable/ic_menu"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_settings"
                android:onClick="top_icons"
                android:src="@drawable/ic_settings"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/top_logout"
                android:onClick="top_icons"
                android:src="@drawable/ic_logout"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame"/>

</LinearLayout>