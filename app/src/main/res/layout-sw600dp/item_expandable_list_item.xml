<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/size_10"
    android:paddingBottom="@dimen/size_10">

    <LinearLayout
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_25"
        android:id="@+id/item_main_list_expandable_list_item_checkbox"
        android:background="@drawable/shape_border_theme_pink"
        android:orientation="horizontal"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_25"
        android:id="@+id/item_main_list_expandable_list_item_checkbox_1"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/shape_background_theme_pink">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tick"/>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/size_5"
        android:layout_height="@dimen/size_5"
        android:id="@+id/item_main_list_expandable_list_item_dot"
        android:background="@drawable/shape_background_theme_orange"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_main_expandable_list_item_text"
        android:text="Chiken"
        android:textColor="@color/text_color"
        android:textSize="@dimen/size_14"
        android:layout_marginLeft="@dimen/size_15"/>

</LinearLayout>